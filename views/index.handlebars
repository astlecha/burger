<h1> Eat a Burger! </h1>

<h2> Burgers to devour! </h2>
<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
		  <li>
			{{this.burger_name}}

			    <form action="/{{this.id}}?_method=PUT" method="POST">
          
            <div class="form-group">
          	  <input type="hidden" class="form-control" name="devoured" value="true">
            </div>

            <button class="btn btn-default" type="submit">DEVOUR ME!</button>
        	</form>
      	  </li>
    	{{/unless}}
  	{{/each}}
</ul>

<h2> All gone! </h2>
<ul>
  	{{#each burgers}}
    	{{#if this.devoured}}
      	  <li>
        	{{this.burger_name}}
      	  </li>
    	{{/if}}
  	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bt">Burger Type:</label>
    <input type="text" class="form-control" id="bt" name="burger_name" placeholder="e.g. Veggie Burger">
  </div>

  <button class="btn btn-default" type="submit">Add Burger</button>
</form>